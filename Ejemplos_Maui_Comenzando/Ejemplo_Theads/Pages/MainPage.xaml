<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ejemplo_Theads.Pages.MainPage">

    <ScrollView>
        <StackLayout Spacing="10" Margin="10">
            
            <Label 
                x:Name="LbActividad"
                Text="Bienvenido a .NET MAUI!"
                FontSize="30"
                HorizontalOptions="Center"
                Margin="0,20,0,20"/>
            
            <Button 
                x:Name="BtnCalcular"
                Text="Iniciar Tarea en Segundo Plano"
                FontSize="20"
                HorizontalOptions="Fill"
                Clicked="OnCalcularClicked"/>

            <Button 
                x:Name="BtnVerActividad"
                Text="Iniciar Tarea en Segundo Plano"
                FontSize="20"
                HorizontalOptions="Center"
                Clicked="OnVerActividadClicked"/>

        </StackLayout>
    </ScrollView>

</ContentPage>
