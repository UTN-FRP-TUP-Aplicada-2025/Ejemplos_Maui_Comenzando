<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ejemplo_DirectionalBinding.Pages.MainPage">

    <ScrollView>
        <VerticalStackLayout Padding="30,0" Spacing="25">
            <Label Text="TwoWay" />
            
            <VerticalStackLayout>
                <Slider x:Name="slider1" 
                        BindingContext="{x:Reference Name=slider2}"
                        Value="{Binding Path=Value}" Maximum="360" VerticalOptions="Center"/>
                <Slider x:Name="slider2" Maximum="360" VerticalOptions="Center"/>
            </VerticalStackLayout>
            
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
