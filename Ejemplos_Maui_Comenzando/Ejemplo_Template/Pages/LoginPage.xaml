<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ejemplo_Template.Pages.LoginPage" >
    
    <Grid RowDefinitions=".3*,.7*">
        <Image Aspect="AspectFill" Source="encuesta.png" />
        <Grid BackgroundColor="Blue" Opacity=".7"/>
        <Grid ColumnDefinitions="*,*">
            <Image Aspect="AspectFit" HeightRequest="120" Source="applogo.png"/>
        </Grid>

        <Grid Grid.Row="1">
            <RoundRectangle Margin="-5,-30,-5,-2" CornerRadius="30,30,0,0" Fill="White"/>
            <VerticalStackLayout Margin="30,0,30,0">
                <Label FontAttributes="Bold" FontFamily="Bold" FontSize="Medium"  Text="Welcome!" TextColor="#2D2D2D"/>
                <Label FontFamily="medium" Text="Log in to continue" TextColor="#A3A3A4"/>
                <Grid Margin="0,30,0,0" ColumnDefinitions=".2*,.8*">
                    <RoundRectangle 
                        BackgroundColor="#EDEBF6"
                        CornerRadius="10"
                        HeightRequest="60"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        WidthRequest="60"/>
                </Grid>
            </VerticalStackLayout>
        </Grid>
    </Grid>


</ContentPage>