<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ejemplo_BasicDataBinding.Pages.MainPage">

    <ScrollView>
        <VerticalStackLayout Padding="30,0" Spacing="25">
            <HorizontalStackLayout>
                <Label Text="Nombre"/>
                <Entry Text="{Binding nombre, Mode=TwoWay}" Keyboard="Text"/>
            </HorizontalStackLayout>

            <HorizontalStackLayout>
                <Label Text="Edad"/>
                <Entry Text="{Binding edad, Mode=TwoWay}" Keyboard="Numeric"/>
            </HorizontalStackLayout>

            <Button Text="Aceptar" Clicked="Button_Clicked"/>
        </VerticalStackLayout>
                
    </ScrollView>

</ContentPage>
