<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ejemplo_Layout.Pages.AbsoluteLayoutPage"
             Title="AbsoluteLayoutPage">

    <ScrollView>
        <VerticalStackLayout>
            <FlexLayout Direction="Column">
                <BoxView Color="Blue"  WidthRequest="200"   HeightRequest="200" />
                <BoxView Color="Green" WidthRequest="200"  HeightRequest="200"  />
                <BoxView Color="Red"    WidthRequest="200" HeightRequest="200"  />
                <BoxView Color="Yellow" WidthRequest="200"  HeightRequest="200" />
            </FlexLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>