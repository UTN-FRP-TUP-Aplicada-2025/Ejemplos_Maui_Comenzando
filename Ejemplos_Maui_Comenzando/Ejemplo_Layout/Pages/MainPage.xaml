<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ejemplo_Layout.Pages.MainPage">

    <ScrollView>
        <StackLayout >
            <Button Text="Vertical Stack Layout" FontSize="20" Clicked="OnVerticalStackLayoutButtonClicked" Margin="10"/>
            <Button Text="Horizontal Stack Layout" FontSize="20" Clicked="OnHorizontalStackLayoutButtonClicked" Margin="10"/>
            <Button Text="Grid Layout" FontSize="20" Clicked="OnGridButtonClicked" Margin="10"/>
            <Button Text="Flex Layout" FontSize="20" Clicked="OnFlexLayoutButtonClicked" Margin="10"/>
        </StackLayout>
    </ScrollView>

</ContentPage>
