<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ejemplo_Layout.Pages.GridPage"
             Title="GridPage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>


        <BoxView Grid.Row="0" Grid.Column="0" Color="Blue"  WidthRequest="100"   HeightRequest="100" />
        <BoxView Grid.Row="0" Grid.Column="1" Color="Green" WidthRequest="100"  HeightRequest="100"  />
        <BoxView Grid.Row="1" Grid.Column="0" Color="Red"    WidthRequest="100" HeightRequest="100"  />
        <BoxView Grid.Row="1" Grid.Column="1" Color="Yellow" WidthRequest="100"  HeightRequest="100" />
    </Grid>
</ContentPage>