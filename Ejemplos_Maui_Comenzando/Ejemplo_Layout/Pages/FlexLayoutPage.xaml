<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ejemplo_Layout.Pages.FlexLayoutPage"
             Title="FlexLayoutPage">
    <ScrollView>
        <StackLayout>
            <FlexLayout Direction="Column">
                <BoxView Color="Blue"  WidthRequest="200"   HeightRequest="200" />
                <BoxView Color="Green" WidthRequest="200"  HeightRequest="200"  />
                <BoxView Color="Red"    WidthRequest="200" HeightRequest="200"  />
                <BoxView Color="Yellow" WidthRequest="200"  HeightRequest="200" />
            </FlexLayout>

            <FlexLayout Direction="Row">
                <BoxView Color="Blue"  WidthRequest="200"   HeightRequest="200" />
                <BoxView Color="Green" WidthRequest="200"  HeightRequest="200"  />
                <BoxView Color="Red"    WidthRequest="200" HeightRequest="200"  />
                <BoxView Color="Yellow" WidthRequest="200"  HeightRequest="200" />
            </FlexLayout>

        </StackLayout>
    </ScrollView>
</ContentPage>