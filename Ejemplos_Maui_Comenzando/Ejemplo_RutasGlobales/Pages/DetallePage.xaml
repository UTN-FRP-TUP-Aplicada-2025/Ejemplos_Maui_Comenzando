<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ejemplo_RutasGlobales.Pages.DetallePage"
             Title="DetallePage">
    <VerticalStackLayout>
        <HorizontalStackLayout>
            <Label Text="{Binding Detalle.Id}"/>
        </HorizontalStackLayout>

        <HorizontalStackLayout>
            <Label Text="Nombre"/>
            <Entry Text="{Binding Detalle.Nombre}" Keyboard="Text"/>
        </HorizontalStackLayout>
        
        <Label Text="{Binding Detalle.Edad}"/>
        
        <HorizontalStackLayout>
            <CheckBox IsChecked="{Binding Detalle.EsActivo}"/>
            <Label Text="EstÃ¡ activo"/>
        </HorizontalStackLayout>

        <Button x:Name="btnVolver"  Clicked="btnVolver_Clicked" Text="Volver"/>
    </VerticalStackLayout>
</ContentPage>