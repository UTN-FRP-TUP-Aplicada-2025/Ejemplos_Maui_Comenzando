<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ejemplo_RutasGlobales.Pages.DetallePage"
             Title="DetallePage">
    <VerticalStackLayout>
        <Label Text="{Binding Detalle.Id}"/>
        <Label Text="{Binding Detalle.Nombre}"/>
        <Label Text="{Binding Detalle.Edad}"/>

        <Button x:Name="btnVolver"  Clicked="btnVolver_Clicked" Text="Volver"/>
    </VerticalStackLayout>
</ContentPage>